<div class="navbar-header">
  <button class="navbar-toggle" type="button" {{action "toggleCollapsed"}}>
    <span class="sr-only">Toggle navigation</span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
  </button>
  <span class="navbar-brand">
    {{inline-svg "dice-logo.svg"}}
  </span>
  <span class="navbar-brand hidden-md hidden-lg">
    {{entropy-meter}}
  </span>
</div>
{{#bs-collapse tagName="nav" class="navbar-collapse" collapsed=headerCollapsed}}
